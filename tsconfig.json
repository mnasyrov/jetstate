{
  "include": [
    "src/index.ts"
  ],
  "compilerOptions": {
    "outDir": "build",
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom"
    ],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true
  }
}
