{
  "name": "jetstate",
  "description": "JetState - clean state management for reactive applications and components",
  "version": "0.0.21",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Mikhail Nasyrov",
    "email": "mnasyrov.apps@gmail.com",
    "url": "https://mnasyrov.com"
  },
  "homepage": "https://github.com/mnasyrov/jetstate#readme",
  "bugs": {
    "url": "https://github.com/mnasyrov/jetstate/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mnasyrov/jetstate.git"
  },
  "keywords": [
    "state-management",
    "state",
    "angular",
    "rxjs",
    "ngx",
    "angular2",
    "cqrs",
    "store"
  ],
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@angular/compiler": "8.0.0",
    "@angular/compiler-cli": "8.0.0",
    "@angular/core": "8.0.0",
    "@types/jest": "24.0.13",
    "jest": "24.8.0",
    "npe": "1.1.3",
    "prettier": "1.18.2",
    "rxjs": "6.5.2",
    "standard-version": "6.0.1",
    "ts-jest": "24.0.2",
    "tslib": "1.9.3",
    "tslint": "5.17.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.4.5",
    "wsrun": "3.6.6",
    "zone.js": "0.9.1"
  },
  "standard-version": {
    "scripts": {
      "postbump": "yarn standard-version-postbump"
    }
  },
  "scripts": {
    "clean": "rm -rf build && wsrun --exclude-missing clean",
    "lint": "tslint \"packages/*/src/**/*.ts\"",
    "format": "prettier --write \"packages/*/{src,test}/**/*.ts\"",
    "test": "jest",
    "build": "wsrun --stages build",
    "dist-build": "yarn clean && yarn build",
    "--  Helpers  --": "",
    "check-format": "prettier --list-different \"packages/*/{src,test}/**/*.ts\"",
    "check-commit": "yarn check-format && yarn lint && yarn test && yarn build",
    "check-publish": "ls -1d packages/* | xargs -n 1 npm publish --dry-run",
    "check-release": "yarn check-publish && standard-version --dry-run",
    "release": "standard-version --commit-all",
    "publish-packages": "ls -1d packages/* | xargs -n 1 npm publish --access public",
    "-- Hooks --": "",
    "standard-version-postbump": "wsrun version --new-version ${npm_package_version} && git add -A"
  }
}
