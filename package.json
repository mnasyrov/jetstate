{
  "name": "jetstate",
  "version": "0.0.7",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "license": "MIT",
  "author": {
    "name": "Mikhail Nasyrov",
    "email": "mnasyrov.apps@gmail.com",
    "url": "https://mnasyrov.com"
  },
  "homepage": "https://github.com/mnasyrov/jetstate#readme",
  "bugs": {
    "url": "https://github.com/mnasyrov/jetstate/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mnasyrov/jetstate.git"
  },
  "keywords": [
    "state-management",
    "state",
    "angular",
    "rxjs",
    "ngx",
    "angular2",
    "cqrs",
    "store"
  ],
  "devDependencies": {
    "@angular/compiler": "7.1.4",
    "@angular/compiler-cli": "7.1.4",
    "@angular/core": "7.1.4",
    "@types/jest": "23.3.10",
    "jest": "23.6.0",
    "ng-packagr": "4.4.5",
    "prettier": "1.15.3",
    "rxjs": "6.3.3",
    "ts-jest": "23.10.5",
    "tsickle": "0.34.0",
    "tslib": "1.9.3",
    "tslint": "5.12.0",
    "tslint-config-prettier": "1.17.0",
    "typescript": "3.1.6",
    "wsrun": "3.5.0",
    "zone.js": "0.8.26"
  },
  "scripts": {
    "clean": "rm -rf build && wsrun --exclude-missing clean",
    "lint": "tslint \"packages/*/src/**/*.ts\"",
    "format-check": "prettier --list-different \"packages/*/{src,test}/**/*.ts\"",
    "format": "prettier --write \"packages/*/{src,test}/**/*.ts\"",
    "test": "jest",
    "build": "wsrun --stages build",
    "check-commit": "yarn lint && yarn format-check && yarn build && yarn test",
    "##  Helpers  ": "",
    "dist-link": "ls -1d build/@jetstate/* | xargs -I {} yarn --cwd {} link",
    "dist-unlink": "ls -1d build/@jetstate/* | xargs -I {} yarn --cwd {} unlink",
    "check-publish": "ls -1d build/@jetstate/* | xargs -n 1 npm publish --dry-run",
    "do-publish": "ls -1d build/@jetstate/* | xargs -n 1 npm publish --access public",
    "##  NPM/Yarn hooks": "",
    "version": "yarn wsrun \"exec yarn version -- --new-version ${npm_package_version}\""
  }
}
