{
  "name": "jetstate",
  "description": "JetState - clean state management for reactive applications and components",
  "version": "0.0.17",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Mikhail Nasyrov",
    "email": "mnasyrov.apps@gmail.com",
    "url": "https://mnasyrov.com"
  },
  "homepage": "https://github.com/mnasyrov/jetstate#readme",
  "bugs": {
    "url": "https://github.com/mnasyrov/jetstate/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mnasyrov/jetstate.git"
  },
  "keywords": [
    "state-management",
    "state",
    "angular",
    "rxjs",
    "ngx",
    "angular2",
    "cqrs",
    "store"
  ],
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@angular/compiler": "7.2.13",
    "@angular/compiler-cli": "7.2.13",
    "@angular/core": "7.2.13",
    "@types/jest": "24.0.11",
    "jest": "24.7.1",
    "ng-packagr": "5.1.0",
    "npe": "1.1.3",
    "prettier": "1.17.0",
    "rxjs": "6.4.0",
    "standard-version": "5.0.2",
    "ts-jest": "24.0.2",
    "tslib": "1.9.3",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.2.4",
    "wsrun": "3.6.4",
    "zone.js": "0.8.26"
  },
  "standard-version": {
    "scripts": {
      "postbump": "yarn standard-version-postbump"
    }
  },
  "scripts": {
    "clean": "rm -rf build && wsrun --exclude-missing clean",
    "lint": "tslint \"{examples,packages}/*/src/**/*.ts\"",
    "format": "prettier --write \"{examples,packages}/*/{src,test}/**/*.ts\"",
    "test": "jest && wsrun --exclude-missing test",
    "build": "wsrun --stages build",
    "dist-build": "yarn clean && yarn build",
    "--  Helpers  --": "",
    "check-format": "prettier --list-different \"{examples,packages}/*/{src,test}/**/*.ts\"",
    "check-commit": "yarn lint && yarn check-format && yarn build && yarn test",
    "check-publish": "test -e build/@jetstate/angular/package.json && ls -1d build/@jetstate/* | xargs -n 1 npm publish --dry-run",
    "check-release": "yarn check-publish && standard-version --dry-run",
    "release": "standard-version --commit-all",
    "publish-packages": "ls -1d build/@jetstate/* | xargs -n 1 npm publish --access public",
    "dist-link": "ls -1d build/@jetstate/* | xargs -I {} yarn --cwd {} link",
    "dist-unlink": "ls -1d build/@jetstate/* | xargs -I {} yarn --cwd {} unlink",
    "-- Hooks --": "",
    "standard-version-postbump": "wsrun version --new-version ${npm_package_version} && git add -A"
  }
}
